<h1>Listing dogs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Breed</th>
    <th>Weight</th>
    <th>Notes</th>
    <th>Jumps fences</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dogs.each do |dog| %>
  <tr>
    <td><%= dog.name %></td>
		<td><%= dog.breed.try(:name) %></td>
    <td><%= dog.weight %></td>
    <td><%= dog.notes %></td>
    <td><%= dog.jumps_fences %></td>
    <td><%= link_to 'Show', dog %></td>
    <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
    <td><%= link_to 'Destroy', dog, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

