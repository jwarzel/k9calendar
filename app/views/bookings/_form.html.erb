<%= form_for @booking, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Booking</legend>

    <div class="control-group">
      <%= f.label :date, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :date, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :dog_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.select("dog_id", Dog.all.collect {|dog| [ dog.name, dog.id ] }, { :include_blank => true }) %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btna-primary' %>
      <%= link_to 'Cancel', bookings_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
