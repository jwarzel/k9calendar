<h1>Bookings</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Dog</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.dog.try(:name) %></td>
        <td><%= link_to booking.date, booking_path(booking) %></td>
        <td>
          <%= link_to 'Edit', edit_booking_path(booking), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', booking_path(booking), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_booking_path, :class => 'btn btn-primary' %>
